{
  "name": "@conduii/core",
  "version": "1.0.0",
  "description": "Conduii Core - Universal testing engine",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "eventemitter3": "^5.0.1",
    "p-limit": "^5.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^1.1.3",
    "tsup": "^8.0.1",
    "typescript": "^5.3.0",
    "vitest": "^1.1.3"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "testing",
    "e2e",
    "integration",
    "api",
    "validation"
  ],
  "license": "MIT"
}
