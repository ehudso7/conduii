# ===========================================
# Conduii Environment Variables
# ===========================================
# Copy this file to .env.local and fill in the values

# ===========================================
# Database (Required)
# ===========================================
# PostgreSQL connection URL for Prisma
POSTGRES_PRISMA_URL="postgresql://user:password@localhost:5432/conduii?schema=public"
DIRECT_URL="postgresql://user:password@localhost:5432/conduii?schema=public"

# ===========================================
# Authentication - Clerk (Optional)
# ===========================================
# Get these from https://dashboard.clerk.com
# If not set, app runs in demo mode without auth
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_..."
CLERK_SECRET_KEY="sk_test_..."
CLERK_WEBHOOK_SECRET="whsec_..."

# Clerk redirect URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/sign-in"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/sign-up"
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL="/dashboard"
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL="/dashboard"

# ===========================================
# Payments - Stripe (Optional)
# ===========================================
# Get these from https://dashboard.stripe.com
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Stripe Price IDs for subscription plans
STRIPE_BASIC_MONTHLY_PRICE_ID="price_..."
STRIPE_BASIC_YEARLY_PRICE_ID="price_..."
STRIPE_PRO_MONTHLY_PRICE_ID="price_..."
STRIPE_PRO_YEARLY_PRICE_ID="price_..."

# ===========================================
# AI Providers (Optional - at least one recommended)
# ===========================================
# Anthropic Claude API
ANTHROPIC_API_KEY="sk-ant-..."

# OpenAI API
OPENAI_API_KEY="sk-..."

# ===========================================
# Email - Resend (Optional)
# ===========================================
# Get this from https://resend.com
RESEND_API_KEY="re_..."
FROM_EMAIL="Conduii <noreply@yourdomain.com>"

# ===========================================
# Application URLs
# ===========================================
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ===========================================
# Development
# ===========================================
NODE_ENV="development"
