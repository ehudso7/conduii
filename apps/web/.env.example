# ============================================================================
# Conduii - Environment Variables Template
# Copy this file to .env.local and fill in your values
# ============================================================================

# ============================================================================
# REQUIRED - Core Configuration
# ============================================================================

# Database (PostgreSQL - Supabase, Neon, or any Postgres)
DATABASE_URL="postgresql://user:password@host:5432/conduii?sslmode=require"
DIRECT_URL="postgresql://user:password@host:5432/conduii?sslmode=require"

# Clerk Authentication (https://clerk.com)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_..."
CLERK_SECRET_KEY="sk_test_..."
CLERK_WEBHOOK_SECRET="whsec_..."

# App URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ============================================================================
# REQUIRED FOR BILLING - Stripe (https://stripe.com)
# ============================================================================

STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."

# Stripe Price IDs (create these in your Stripe dashboard or run yarn stripe:setup)
# Basic Plan
STRIPE_BASIC_MONTHLY_PRICE_ID="price_..."
STRIPE_BASIC_YEARLY_PRICE_ID="price_..."
# Pro Plan
STRIPE_PRO_MONTHLY_PRICE_ID="price_..."
STRIPE_PRO_YEARLY_PRICE_ID="price_..."
# Enterprise Plan
STRIPE_ENTERPRISE_MONTHLY_PRICE_ID="price_..."
STRIPE_ENTERPRISE_YEARLY_PRICE_ID="price_..."

# Public Price IDs (for client-side pricing display)
NEXT_PUBLIC_STRIPE_BASIC_MONTHLY_PRICE_ID="price_..."
NEXT_PUBLIC_STRIPE_BASIC_YEARLY_PRICE_ID="price_..."
NEXT_PUBLIC_STRIPE_PRO_MONTHLY_PRICE_ID="price_..."
NEXT_PUBLIC_STRIPE_PRO_YEARLY_PRICE_ID="price_..."
NEXT_PUBLIC_STRIPE_ENTERPRISE_MONTHLY_PRICE_ID="price_..."
NEXT_PUBLIC_STRIPE_ENTERPRISE_YEARLY_PRICE_ID="price_..."

# ============================================================================
# OPTIONAL - Service Integrations (for testing user projects)
# ============================================================================

# Vercel Integration
VERCEL_TOKEN=""

# GitHub Integration
GITHUB_TOKEN=""

# Supabase (for testing user Supabase instances)
# Users will provide their own credentials per-project

# ============================================================================
# OPTIONAL - Email (for notifications)
# ============================================================================

# Resend (https://resend.com)
RESEND_API_KEY=""
EMAIL_FROM="Conduii <hello@conduii.com>"

# ============================================================================
# OPTIONAL - Monitoring & Analytics
# ============================================================================

# Sentry (https://sentry.io)
SENTRY_DSN=""
NEXT_PUBLIC_SENTRY_DSN=""

# PostHog Analytics (https://posthog.com)
NEXT_PUBLIC_POSTHOG_KEY=""
NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"

# ============================================================================
# DEVELOPMENT
# ============================================================================

# Set to 'development' or 'production'
NODE_ENV="development"
